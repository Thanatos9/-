#include<stdio.h>
#include<stdlib.h>
#include<windows.h>

struct data {
	int HP; //生命值
	int MP; //耐力
	int DP; //防御
	int ATT; //攻击力
	int STR; //力量
	int DEX; //敏捷
	int CHR; //魅力

} Player;

void color() {
	Sleep(500);
	system("color 01");
	Sleep(500);
	system("color 02");
	Sleep(500);
	system("color 03");
	Sleep(500);
	system("color 04");
	Sleep(500);
	system("color 0E");
	Sleep(500);
}

void Gotoxy(int x, int y) {
	HANDLE hout;	//定义句柄变量hout
	COORD coord;	//定义结构体coord
	coord.X = x;
	coord.Y = y;
	hout = GetStdHandle(STD_OUTPUT_HANDLE);		//获得标准输出（屏幕）句柄
	SetConsoleCursorPosition(hout, coord);		//移动光标
}

void HideCursor() {
	CONSOLE_CURSOR_INFO cursor_info = {1, 0};	//后边的0代表光标不可见
	SetConsoleCursorInfo(GetStdHandle(STD_OUTPUT_HANDLE), &cursor_info);
}

void ShowCursor() {
	CONSOLE_CURSOR_INFO cursor_info = {1, 0};	//后边的0代表光标不可见
	SetConsoleCursorInfo(GetStdHandle(STD_OUTPUT_HANDLE), &cursor_info);
}

void progress() {
	int len;
	HideCursor();
	printf("╔═════════════════════════╗");
	putchar('\n');
	printf("║                                                  ║");
	putchar('\n');
	printf("╚═════════════════════════╝");
	for(len=1;len<=25;len++)
	{
		Gotoxy(2*len, 13);
		printf("█");
		Gotoxy(21, 15);
		printf("载入游戏中%d%%\n", 4 * len);
		Sleep(100);
		ShowCursor();
	}
}

void main() {
	system("mode con cols=55 lines=30");
	puts("*******************************************************");
	puts("                欢迎来到神奇的冒险世界 \n        ");
	puts("*******************************************************");
	color();
	puts("经历了千辛万苦，你竟然活下来了……其实就是几次退出而已…\n咳咳…终于来到了第二关\n");
	Sleep(500);
	puts("             如果准备好了就按下你的回车吧！    ");
	getchar();
	progress();
}
