#include<stdio.h>
#include<stdlib.h>
#include<windows.h>

struct data {
	int HP; //生命值
	int MP; //耐力
	int DP; //防御
	int ATT; //攻击力
	int STR; //力量
	int DEX; //敏捷
	int CHR; //魅力

} Player;

struct data {


void color() {
	Sleep(500);
	system("color 01");
	Sleep(500);
	system("color 02");
	Sleep(500);
	system("color 03");
	Sleep(500);
	system("color 04");
	Sleep(500);
	system("color 0E");
	Sleep(500);
}

void Gotoxy(int x, int y) {
	HANDLE hout;	//定义句柄变量hout
	COORD coord;	//定义结构体coord
	coord.X = x;
	coord.Y = y;
	hout = GetStdHandle(STD_OUTPUT_HANDLE);		//获得标准输出（屏幕）句柄
	SetConsoleCursorPosition(hout, coord);		//移动光标
}

void HideCursor() {
	CONSOLE_CURSOR_INFO cursor_info = {1, 0};	//后边的0代表光标不可见
	SetConsoleCursorInfo(GetStdHandle(STD_OUTPUT_HANDLE), &cursor_info);
}

void ShowCursor() {
	CONSOLE_CURSOR_INFO cursor_info = {1, 0};	//后边的0代表光标不可见
	SetConsoleCursorInfo(GetStdHandle(STD_OUTPUT_HANDLE), &cursor_info);
}

void progress() {
	int len;
	HideCursor();
	printf("╔═════════════════════════╗");
	putchar('\n');
	printf("║                                                  ║");
	putchar('\n');
	printf("╚═════════════════════════╝");
	for(len=1;len<=25;len++)
	{
		Gotoxy(2*len, 13);
		printf("█");
		Gotoxy(21, 15);
		printf("载入游戏中%d%%\n", 4 * len);
		Sleep(100);
		ShowCursor();
	}
}

void selectplayer(int n) {
	system("cls");
	puts("请选择一个英雄:\n");
	int m;
	puts("1.下面使者");
	puts("2.XB骑士");
	puts("3.天宇技师");
	puts("4.单车武士");
    scanf("%d",&m);
    aa:if(m==1) {
		Player.HP=10;
		Player.MP=10;
		Player.DP=10;
		puts("你将成为下面使者开始冒险!");
		n=1;
	}else if(m==2) {
		Player.HP=10;
		Player.MP=10;
		Player.DP=10;
		puts("你将成为XB骑士开始冒险!");
		n=2;
	}else if(m==3) {
		Player.HP=10;
		Player.MP=10;
		Player.DP=10;
		puts("你将成为天宇技师开始冒险!");
		n=3;
	}else if(m==4) {
		Player.HP=10;
		Player.MP=10;
		Player.DP=10;
		puts("你将成为单车武士开始冒险!");
		n=4;
	}else {
		puts("要选择一个角色哦!");
		scanf("%d",&m);
		goto aa;
	}

}

